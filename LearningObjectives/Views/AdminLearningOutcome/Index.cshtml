@model IEnumerable<EFGetStarted.AspNetCore.NewDb.Models.LearningOutcome>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Learning Outcomes</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LearningOutcomeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LearningOutcomeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LearningOutcomeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
